  <script>
 document.addEventListener("DOMContentLoaded", function () {
  const submitBtn = document.getElementById("submitYearButton");
  const birthDateInput = document.getElementById("birthYearInput");
  const mainContent = document.getElementById("mainContent");
  const ageGate = document.getElementById("ageGate");
  const errorMsg = document.getElementById("errorMsg");
  function getMinimumAgeByLocale() {
    const locale = navigator.language || navigator.userLanguage;
    if (locale && locale.toLowerCase().includes("en-us")) {
      return 21; // USA
    }
    return 18; // default
  }
  const minimumAge = getMinimumAgeByLocale();
  if (localStorage.getItem("ageVerified") === "true") {
    if (ageGate) ageGate.style.display = "none";
    if (mainContent) mainContent.style.display = "block";
  } else {
    ageGate.style.display = "flex";
  }
  submitBtn.addEventListener("click", function (e) {
    e.preventDefault();
    const birthDateValue = birthDateInput.value;
    if (!birthDateValue) {
      errorMsg.style.display = "block";
      return;
    }
    const birthDate = new Date(birthDateValue);
    const today = new Date();
    let age = today.getFullYear() - birthDate.getFullYear();
    const birthdayPassed =
      today.getMonth() > birthDate.getMonth() ||
      (today.getMonth() === birthDate.getMonth() &&
        today.getDate() >= birthDate.getDate());
    if (!birthdayPassed) age--;
    if (!isNaN(age) && age >= minimumAge) {
      localStorage.setItem("ageVerified", "true");
      if (ageGate) ageGate.style.display = "none";
      if (mainContent) mainContent.style.display = "block";
    } else {
      errorMsg.style.display = "block";
    }
  });
});
