<div data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=4&intent=related">
            {% if recommendations.products != blank %}    <div li-if="recommendations.products != blank" class="container-large">
    
              <div class="headline-wrapper padding-global">
                <h2 class="heading-style-h2">
{{ section.settings.text_headline }}
</h2>
              </div>
              <div class="product_list-wrapper">
                <ul role="list" class="product_list w-list-unstyled">
                  {% for product in recommendations.products %}    <li li-for="product in recommendations.products" class="product_list-item">
                                    
                    
                            <div class="collection-item_wrapper">
                      {% render 'product_item', product: product %}
                    </div>
                            
                  
                        </li>
{% endfor %}
                </ul>
              </div>
                </div>
{% endif %}
