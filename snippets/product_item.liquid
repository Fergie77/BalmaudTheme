<script src="{{ 'li_custom.js' | asset_url }}" type="text/javascript"></script>
<div li-element="product-variant-container" id="w-node-_28c519bc-cc11-dc84-a102-409826ac82e2-b935a516" class="product-item_component" x-data="handleVariant({{ product | json | escape }}, {{ product.options_by_name | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})" x-init="$nextTick(() => { activateVariants() })" @setbundleitem.window="updateBundleItem($event.detail.product, $event.detail.quantity)">
                          <div class="product-item_image-link">
                            <a li-object:href="product.url" href="{{ product.url }}" class="product-item_image-wrapper w-inline-block"><img src="{{ product.featured_image | image_url: width: 450 }}" loading="lazy" li-object:src="product.featured_image | image_url: width: 450" li-object:alt="product.featured_image.alt" alt="{{ product.featured_image.alt }}" class="product-item_image"></a>
                            <div class="product-item_tag_list">
                              {% if product.compare_at_price_max > product.price %}    <div li-if="product.compare_at_price_max > product.price" class="product-item_tag is-red">
    Sale    </div>
{% endif %}
                              {% if product.selected_or_first_available_variant.available != true %}    <div li-if="product.selected_or_first_available_variant.available != true" class="product-item_tag is-out-of-stock">
    Out Of Stock    </div>
{% endif %}
                            </div>
                          </div>
                          <a li-object:href="product.url" href="{{ product.url }}" class="product-item_text-link w-inline-block">
                            <div class="product-item_left">
                              <div li-object="product.vendor" class="text-size-small hide">{{ product.vendor }}</div>
                              <div class="margin-bottom margin-small">
                                <div class="product-item_price_wrapper">
                                  <div class="product-item_name_wrapper">
                                    <div class="product-item_name_heading text-style-1line"><span li-object="product.title">{{ product.title }}</span></div>
                                    <div class="product-item_name_heading text-style-1line is-hidden"><span>View Product →</span></div>
                                  </div>
                                  <div class="product-item_price">
                                    {% if product.compare_at_price_max > product.price %}    <div li-if="product.compare_at_price_max > product.price">
    
                                      <div li-object="product.compare_at_price | money" class="text-style-strikethrough text-style-muted">{{ product.compare_at_price | money }}</div>
                                        </div>
{% endif %}
                                    <div li-object="product.price | money">{{ product.price | money }}</div>
                                  </div>
                                </div>
                              </div>
                              {% if product.metafields.custom.origin %}    <div li-if="product.metafields.custom.origin">
    
                                {% if product.content %}    <p li-if="product.metafields.custom.short_description_toggle" li-object="product.content">
    Short Description In here    </p>
{% endif %}
                                {% if product.metafields.custom.origin %}    <div li-if="product.metafields.custom.origin" class="product-item_metafield-layout">
    
                                  <div class="text-weight-medium">Origin°</div>
                                  <div li-object="product.metafields.custom.origin" class="product-item_metafield-text">{{ product.metafields.custom.origin }}</div>
                                    </div>
{% endif %}
                                {% if product.metafields.custom.region %}    <div li-if="product.metafields.custom.region" class="product-item_metafield-layout">
    
                                  <div class="text-weight-medium">Region°</div>
                                  <div li-object="product.metafields.custom.region" class="product-item_metafield-text">{{ product.metafields.custom.region }}</div>
                                    </div>
{% endif %}
                                {% if product.metafields.custom.variety %}    <div li-if="product.metafields.custom.variety" class="product-item_metafield-layout">
    
                                  <div class="text-weight-medium">Variety°</div>
                                  <div li-object="product.metafields.custom.variety" class="product-item_metafield-text">{{ product.metafields.custom.variety }}</div>
                                    </div>
{% endif %}
                                {% if product.metafields.custom.process %}    <div li-if="product.metafields.custom.process" class="product-item_metafield-layout">
    
                                  <div class="text-weight-medium">Process°</div>
                                  <div li-object="product.metafields.custom.process" class="product-item_metafield-text">{{ product.metafields.custom.process }}</div>
                                    </div>
{% endif %}
                                {% if product.metafields.custom.notes %}    <div li-if="product.metafields.custom.notes" class="product-item_metafield-layout">
    
                                  <div class="text-weight-medium">Notes°</div>
                                  <div class="notes_wrapper">
                                    {% for item in product.metafields.custom.notes.value %}    <div li-for="item in product.metafields.custom.notes.value">
                                    
                                      
                            <div li-object="item" class="product-item_metafield-text">{{ item }}</div>
                            
                                    
                        </div>
{% endfor %}
                                  </div>
                                    </div>
{% endif %}
                                  </div>
{% endif %}
                            </div>
                          </a>
                        </div>
